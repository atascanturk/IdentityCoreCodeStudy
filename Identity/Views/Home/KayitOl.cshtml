@model UserSignUpVİewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>KayitOl</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <form class="w-50 mx-auto p-4 mt-3 shadow " asp-action="KayitOl">
        <h4 class="text-center lead ">Kayıt Ol</h4>
        <div class="form-group">
            <label asp-for="@Model.UserName"></label>
            <span asp-validation-for="@Model.UserName" ></span>
            <input asp-for="@Model.UserName" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Password"></label>
            <span asp-validation-for="@Model.Password"></span>
            <input asp-for="@Model.Password" class="form-control" />
        </div>
        
        <div class="form-group">
            <label asp-for="@Model.ComfirmPassword"></label>
            <span asp-validation-for="@Model.ComfirmPassword"></span>
            <input asp-for="@Model.ComfirmPassword" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Email"></label>
            <span asp-validation-for="@Model.Email"></span>
            <input asp-for="@Model.Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Name"></label>
            <span asp-validation-for="@Model.Name"></span>
            <input asp-for="@Model.Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.SurName"></label>
            <span asp-validation-for="@Model.SurName"></span>
            <input asp-for="@Model.SurName" class="form-control" />
        </div>
        <div class="text-danger" asp-validation-summary="ModelOnly" ></div>
        <input type="submit" class="btn btn-primary" value="Kayıt Ol" />
        <small>Hesabınız var mı?</small> <a asp-action="KayitOl" class="btn btn-link">Giriş Yap</a>
    </form>
</body>
</html>