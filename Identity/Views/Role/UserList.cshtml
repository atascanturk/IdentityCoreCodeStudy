@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a asp-action="AssignRole" asp-controller="Role" class="btn btn-info btn-sm my-2">Yeni Rol Ekle</a>
<table class="table table-sm table-hover">
    <tr>
        <td>Ad</td>
        <td>Roller</td>
        <td>İşlem</td>
    </tr>
    @if (Model.Count > 0)
    {

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <RolGoster user-id="@item.Id"></RolGoster>
                </td>
                <td>
                    <a asp-action="AssignRole" asp-route-id="@item.Id" class="btn btn-warning btn-sm ">Role Ata</a>
                    <a asp-action="AddClaim" asp-route-id="@item.Id"  asp-controller="Female" class="btn btn bg-info btn-sm">Kadın Claim Ekle </a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td>Sisteminizde kayıtlı rol bulunmamaktadır.</td>
        </tr>
    }




